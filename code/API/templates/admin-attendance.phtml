<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">


        
    </head>
    <body ng-controller="PairingListCtrl">
        <!-- ============================================================================================ -->
      <div class="container" id="alert_placeholder"></div>
      <div class="container">

      <div class="starter-template">
        <h1><span class="text-capitalize">time pairing server monitor</span></h1>
        <p>&nbsp;</p>
        <p> <img src="http://www.myevolution.my/wp-content/uploads/2013/06/myevolution-logo-full-300x67.png" class="img-rounded" alt="the logo"></p>
      </div>



    </div>


    <div class="container">

      <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">

                <div class="panel-group">
  <div class="panel panel-default">
        <div id="timestamp" class="panel-heading">{{TIMESTAMP}}</div>
        <div class="panel-body" style="text-align:center;">
 <table id="table-list" class="table table-hover table-striped">
<tr>
    <th>&nbsp;</th>
    <th>Device ID</th>
    <th>Card ID</th>
    <th style="text-align:center;">Device Time</th>
    <th style="text-align:center;">Prev Heartbeat Start</th>
    <th style="text-align:center;">Prev Heartbeat Stop</th>
</tr>

<tr ng-repeat="x in pairings">
     <td><!-- <span class="label label-info">{{$index + 1}}</span> -->&nbsp;</td>
     <td style="text-align:left;">{{x.deviceid}}</td>
     <td style="text-align:left;">{{x.cardid}}</td>
     <td style="text-align:center;"><span class="badge">{{x.dev_timestamp}}</span></td>
     <td style="text-align:center;"><span class="badge">{{x.prev_hb}}</span></td>
     <td style="text-align:center;"><span class="badge">{{x.next_hb}}</span></td>
</tr>

</table>
        </div>
        <div class="panel-footer">by <a href="http://www.myevolution.my/">myevolution</a></div>
  </div>
</div>

    </div>
    <div class="col-md-1"></div>
  </div>

    </div> <!-- /container -->

        <!-- ============================================================================================ -->
<!-- Latest compiled and minified JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<script type="text/javascript">
'use strict';
var app = angular.module('myApp', []);
app.controller('PairingListCtrl', function($scope, $http, $timeout) {
// Function to get the data
$scope.getData = function(){
    $http.get('admin/list/50')
        .success(function(response) {
        $scope.pairings = response.data;
        $scope.TIMESTAMP = clock();
        console.log('Fetched data!');
    });
};
// Function to replicate setInterval using $timeout service.
$scope.intervalFunction = function(){
    $timeout(function() {
        $scope.getData();
        $scope.intervalFunction();
    }, 10000)
};
$scope.getData();
$scope.intervalFunction();// Kick off the interval
});

function clock() {var now = new Date();var TmStr = 'Timestamp: ' + (now.getDate())+"/"+(now.getMonth()+1)+"/"+now.getFullYear() + ' ' + ('0' + now.getHours()).slice(-2) + ':' + ('0' + now.getMinutes()).slice(-2) + meridiem(now.getHours());return TmStr;}
function meridiem(hour) { if (hour > 11) { return 'PM'; } else { return 'AM'; }}

</script>

    </body>
</html>

